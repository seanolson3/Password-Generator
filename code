import random
import string 


#input length
length = int(input("What length would you like your password: "))

#Password generation function
def gen_pass():
    global password
    #string package including all printable
    letter_bank = string.printable
    #appending a random char from letter_bank for i in length
    password = ''.join(random.choice(letter_bank) for i in range(length))


gen_pass()
print(password)
